@model Idea.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-primary">Create New Department</h1>
        <p class="text-muted">Fill out the form below to add a new department.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Department Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter department name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <span class="material-icons">arrow_back</span> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <span class="material-icons">add</span> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
