@model Idea.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}


<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-danger">Delete User</h1>
        <p class="text-muted">Are you sure you want to delete the user <strong>@Model.UserName</strong>? This action cannot be undone.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="text-secondary mb-4">User Details</h4>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="text-end">First Name</th>
                                <td>@Html.DisplayFor(model => model.FirstName)</td>
                            </tr>
                            <tr>
                                <th class="text-end">Last Name</th>
                                <td>@Html.DisplayFor(model => model.LastName)</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="text-center mt-4">
                        <h5 class="text-danger">Are you sure you want to delete this user?</h5>
                        <form asp-action="Delete" class="mt-3">
                            <input type="hidden" asp-for="Id" />
                            <a asp-action="Index" class="btn btn-secondary">
                                <span class="material-icons">arrow_back</span> Back
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <span class="material-icons">delete</span> Confirm Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
