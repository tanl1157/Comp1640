@model Idea.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit User";
}



<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-primary">Edit User</h1>
        <p class="text-muted">Update the details for <strong>@Model.UserName</strong></p>
    </div>

    <form asp-action="Edit" method="post"  class="row justify-content-center">
        <!-- Back and Save Buttons -->
        <div class="col-12 text-center mb-4">
            <a asp-action="Index" class="btn btn-secondary me-2">
                <span class="material-icons">arrow_back</span> Back
            </a>
            <button type="submit" class="btn btn-success">
                <span class="material-icons">save</span> Save Changes
            </button>
        </div>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger col-12" role="alert"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="NormalizedUserName" />
        <input type="hidden" asp-for="NormalizedEmail" />
        <input type="hidden" asp-for="EmailConfirmed" />
        <input type="hidden" asp-for="PasswordHash" />
        <input type="hidden" asp-for="SecurityStamp" />
        <input type="hidden" asp-for="ConcurrencyStamp" />
        <input type="hidden" asp-for="PhoneNumberConfirmed" />

        <!-- Account Information -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5>Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="TwoFactorEnabled" class="form-label">Two Factor Enabled</label>
                        <input asp-for="TwoFactorEnabled" class="form-control" />
                        <span asp-validation-for="TwoFactorEnabled" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LockoutEnd" class="form-label">Lockout End</label>
                        <input asp-for="LockoutEnd" class="form-control" />
                        <span asp-validation-for="LockoutEnd" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LockoutEnabled" class="form-label">Lockout Enabled</label>
                        <input asp-for="LockoutEnabled" class="form-control" />
                        <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AccessFailedCount" class="form-label">Access Failed Count</label>
                        <input asp-for="AccessFailedCount" class="form-control" />
                        <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Section -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5>Profile</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SSN" class="form-label">SSN</label>
                        <input asp-for="SSN" class="form-control" />
                        <span asp-validation-for="SSN" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PassportID" class="form-label">Passport ID</label>
                        <input asp-for="PassportID" class="form-control" />
                        <span asp-validation-for="PassportID" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Birthday" class="form-label">Birthday</label>
                        <input asp-for="Birthday" class="form-control" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AlternativeEmail" class="form-label">Alternative Email</label>
                        <input asp-for="AlternativeEmail" class="form-control" />
                        <span asp-validation-for="AlternativeEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AlternativePhone" class="form-label">Alternative Phone</label>
                        <input asp-for="AlternativePhone" class="form-control" />
                        <span asp-validation-for="AlternativePhone" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Others" class="form-label">Others</label>
                        <input asp-for="Others" class="form-control" />
                        <span asp-validation-for="Others" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
