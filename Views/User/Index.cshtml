@model IEnumerable<Idea.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Index";
}


</nav>

<div class="text-center mb-4">
    <h1 class="text-primary">User Management</h1>
    <p class="text-muted">Manage user accounts, assign roles, and update user details.</p>
    <a class="btn btn-success" asp-area="Identity" asp-page="/Account/Register">
        <span class="material-icons">person_add</span> Create New User
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center align-middle">
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </a>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm mx-1">
                                <span class="material-icons">edit</span> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                                <span class="material-icons">delete</span> Delete
                            </a>
                            <a asp-action="AddRole" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1">
                                <span class="material-icons">people_alt</span> Assign Role
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
