@model Idea.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-danger">Delete Category</h1>
        <p class="text-muted">Are you sure you want to delete this category? This action cannot be undone.</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <h4 class="text-primary">Category Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 text-end fw-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8 text-start">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <form asp-action="Delete" class="me-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <span class="material-icons">delete</span> Confirm Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <span class="material-icons">arrow_back</span> Back to List
        </a>
    </div>
</div>
