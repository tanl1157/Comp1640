@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role Index";
}



<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-primary">Role Management</h1>
        <p class="text-muted">Manage system roles and their details.</p>
        <a class="btn btn-success" asp-action="Create">
            <span class="material-icons">add</span> Create New Role
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Concurrency Stamp</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center align-middle">
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td style="word-break: break-word;">@Html.DisplayFor(modelItem => item.ConcurrencyStamp)</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm mx-1">
                                    <span class="material-icons">edit</span> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                                    <span class="material-icons">delete</span> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
