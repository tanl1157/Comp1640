@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}



<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-danger">Delete Role</h1>
        <p class="text-muted">Are you sure you want to delete the role <strong>@Model.Name</strong>? This action cannot be undone.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="text-center">Role Details</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="text-end">Role Name</th>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                            </tr>
                            <tr>
                                <th class="text-end">Role ID</th>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="text-center mt-4">
                        <h5 class="text-danger">Are you sure you want to delete this role?</h5>
                        <form asp-action="Delete" class="mt-3">
                            <input type="hidden" asp-for="Id" />
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <span class="material-icons">arrow_back</span> Back
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <span class="material-icons">delete</span> Confirm Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
