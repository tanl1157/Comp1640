@model Idea.Models.NIdea

@{
    ViewData["Title"] = "Add Idea";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="text-primary">Add</h1>
    </div>

    <form asp-action="AddIdea" enctype="multipart/form-data" class="row justify-content-center">
        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger col-md-6" role="alert"></div>

        <!-- Hidden Fields -->
        <input type="hidden" asp-for="SubmissionId" value="@ViewBag.SubmissionId" />
        <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
        <input type="hidden" asp-for="View" value="0" />
        <input type="hidden" asp-for="FilePath" value="" />

        <!-- Form Content -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <!-- Title -->
                    <div class="form-group mb-4">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter your idea title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Brief -->
                    <div class="form-group mb-4">
                        <label asp-for="Brief" class="form-label">Brief Description</label>
                        <textarea asp-for="Brief" class="form-control" rows="3" placeholder="Write a brief description"></textarea>
                        <span asp-validation-for="Brief" class="text-danger"></span>
                    </div>

                    <!-- Content -->
                    <div class="form-group mb-4">
                        <label asp-for="Content" class="form-label">Content</label>
                        <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write detailed content here"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <!-- File Upload -->
                    <div class="form-group mb-4">
                        <label class="form-label">Attach File</label>
                        <input type="file" name="file" class="form-control" />
                    </div>

                    <!-- Accept Terms -->
                    <div class="form-check mb-4">
                        <input type="checkbox" name="isAcceptTerms" value="True" class="form-check-input" id="acceptTerms" />
                        <label class="form-check-label" for="acceptTerms">I accept the terms and conditions.</label>
                    </div>

                    <!-- Category -->
                    <div class="form-group mb-4">
                        <label asp-for="CategoryId" class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="ViewIdeas" asp-route-submissionid="@ViewBag.SubmissionId" class="btn btn-secondary">
                            <span class="material-icons">arrow_back</span> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <span class="material-icons">add_circle</span> Create
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
