@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body text-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p class="mb-4 text-muted">Are you sure you want to log out?</p>
                        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger">
                                <span class="material-icons">logout</span> Log Out
                            </button>
                        </form>
                    }
                    else
                    {
                        <p class="text-success">You have successfully logged out of the application.</p>
                        <a href="/" class="btn btn-primary">
                            <span class="material-icons">home</span> Return to Home
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
